
@{
    ViewBag.Title = "Index";
}


<main class="main-container">
    <section class="men_area pt-40">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">


                    <div class="product-filter">
                        <div class="row">
                            @for (int i = 0; i < 4; i++)
                            {
                                <div class="col-lg-3 col-md-5 col-sm-12">
                                
                                    <h5>Sort By:</h5>
                                
                                    <select class="wide nice-select small">
                                        <option value="">Default</option>
                                        <option value="">Name (A - Z)</option>
                                        <option value="">Name (Z - A)</option>
                                        <option value="">Price (Low > High)</option>
                                        <option value="">Price (High > Low)</option>
                                        <option value="">Rating (Lowest sdsdsdsdsdsds sds)</option>
                                    </select>
                                </div>
                            }
                        </div>

                       
                        <div id="shop-all" class="row">
                            <!-- Product Item #1 -->
                            @for (int i = 0; i < 8; i++)
                            {
                                <div class="col-xs-12 col-sm-6 col-md-3 product-item filter-sale">
                                    <div class="product-img">
                                        <img src="~/img/web_img/gorsele_erisilemiyor.jpg" alt="product">
                                        <div class="product-sale">
                                            YENİ
                                        </div>
                                        <div class="product-hover">
                                            <div class="product-cart">
                                                <a class="btn btn-secondary btn-block" href="#">Add To Cart</a>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- .product-img end -->
                                    <div class="product-bio">
                                        <h4>
                                            <a href="#">Titan Measures</a>
                                        </h4>
                                        <p class="product-price">
                                            <span>$40.00</span>
                                            $32.00</p>
                                    </div>
                                    <!-- .product-bio end -->
    
                                </div>
                                <!-- .product-item end -->
                            }

                        </div>
                    </div>

                    
                </div>
            </div>
    </section>


    <div class="clearfix"></div>
</main>

